{
	"name": "weather-app-mac",
	"version": "0.0.1",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git.maclong.dev/weather-app"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"db-sync": "prisma db push"
	},
	"devDependencies": {
		"@fontsource/anonymous-pro": "^4.5.9",
		"@fontsource/poppins": "^4.5.10",
		"@prisma/client": "^4.9.0",
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/kit": "^1.0.0",
		"@tailwindcss/forms": "^0.5.3",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"lodash.debounce": "^4.0.8",
		"postcss": "^8.4.21",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"prisma": "^4.9.0",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tailwindcss": "^3.2.4",
		"vite": "^4.0.0",
		"vitest": "^0.25.3"
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"eslint:recommended",
			"prettier"
		],
		"plugins": [
			"svelte3"
		],
		"ignorePatterns": [
			"*.cjs"
		],
		"overrides": [
			{
				"files": [
					"*.svelte"
				],
				"processor": "svelte3/svelte3"
			}
		],
		"parserOptions": {
			"sourceType": "module",
			"ecmaVersion": 2020
		},
		"env": {
			"browser": true,
			"es2017": true,
			"node": true
		}
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "none",
		"printWidth": 100,
		"plugins": [
			"prettier-plugin-svelte"
		],
		"pluginSearchDirs": [
			"."
		],
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	},
	"postcss": {
		"plugins": {
			"tailwindcss/nesting": {},
			"tailwindcss": {},
			"autoprefixer": {}
		}
	},
	"type": "module"
}
